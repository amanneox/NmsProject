<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  <title>Sign Up</title>
  <link href="./res/css/style.css" rel="stylesheet" type="text/css">
  <script src="./res/js/jquery.min.js"></script>
  <link href="./res/css/main.css" rel="stylesheet">
</head>

<body class="app">
  <div id="loader">
    <div class="spinner"></div>
  </div>
  <script>
    window.addEventListener('load', () => {
      const loader = document.getElementById('loader');
      setTimeout(() => {
        loader.classList.add('fadeOut');
      }, 300);
    });
  </script>
  <div class="peers ai-s fxw-nw h-100vh">
    <div class="peer peer-greed h-100 pos-r bgr-n bgpX-c bgpY-c bgsz-cv" style="background-image:url(assets/static/images/bg.jpg)">
      <div class="p-5 pos-a fixed-top">
        <div class="bgc-white bdrs-50p pos-r" style="width:120px;height:120px"><img width="75px" class="pos-a centerXY" src="assets/static/images/logo.png" alt=""></div>
      </div>
    </div>
    <div class="col-12 col-md-4 peer pX-40 pY-80 h-100 bgc-white scrollable pos-r" style="min-width:320px">
      <h4 class="fw-300 c-grey-900 mB-40">NMS Register</h4>
      <form>
        <div class="form-group"><label class="text-normal text-dark">Name</label> <input type="text" class="form-control" placeholder="Enter Name"></div>
        <div class="form-group"><label class="text-normal text-dark">EmplyeeID</label> <input type="email" class="form-control" placeholder="Enter Email"></div>
        <div class="form-group"><label class="text-normal text-dark">Password</label> <input type="password" class="form-control" placeholder="Password"></div>
        <div class="form-group"><label class="text-normal text-dark">Confirm Password</label> <input type="password" class="form-control" placeholder="Password"></div>
        <div class="peer"> <a class="btn btn-primary" href="#">Register</a></div>
        <br>
        <div class="peer"> <a class="btn btn-primary" href="/signin">Login</a> </div>
      </form>
    </div>
  </div>
  <script type="text/javascript" src="./res/js/vendor.js"></script>
  <script type="text/javascript" src="./res/js/bundle.js"></script>
</body>

</html>
